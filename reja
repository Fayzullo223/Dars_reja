  <script>
    function jadvalniKorsat() {
      const jadval = document.getElementById("jadval");
      if (jadval.style.display === "none" || jadval.style.display === "") {
        jadval.style.display = "table";
        if (document.getElementById("darslar-tanasi").childElementCount === 0) {
          darslarniYukla();
        }
      } else {
        jadval.style.display = "none";
      }
    }

    function darslarniYukla() {
      const tanasi = document.getElementById("darslar-tanasi");
      const darsNomi = [
        "Kirish",
        "Box bilan shkaf chizish",
        "Bolalar kravati",
        "Stol",
        "Kompyuter stoli",
        "Kravat oyog'lari",
        "Bakal",
        "Interyer 1 qism",
        "Interyer 2 qism",
        "Interyer 3 qism",
        "Interyer 4 qism",
        "Interyer 5 qism",
        "Interyer 6 qism",
        "Interyer 7 qism",
        "Cosmos bilan ishlash",
        "Modelkalar bilan ishlash",
        "Imtihon",
        "Qo'shimcha imtihon 1",
        "Qo'shimcha Imtihon 2",
        "Qo'shimcha Imtihon 3",
        "Shaxmat doskasi",
        "Wall light",
        "PSP 2"
      ];

      const kunlar = ["Dushanba", "Chorshanba", "Juma"];
      const vaqt = "15:00";

      for (let i = 1; i <= darsNomi.length; i++) {
        const tr = document.createElement("tr");
        const kun = kunlar[(i - 1) % kunlar.length];
        
        const darsNomBtn = document.createElement("button");
        darsNomBtn.className = "video-btn";
        darsNomBtn.textContent = darsNomi[i - 1] || "Dars mavzusi";

        if (i === 1) {
          darsNomBtn.onclick = function() {
            korsatVideo(i, darsNomi[i - 1]);
          };
        } else {
          darsNomBtn.disabled = true;
          darsNomBtn.style.opacity = "0.6";
          darsNomBtn.title = "Hozircha faqat 1-dars mavjud";
        }

        tr.innerHTML = `<td>${i}</td><td></td><td>${kun}, ${vaqt}</td>`;
        tr.cells[1].appendChild(darsNomBtn);
        tanasi.appendChild(tr);
      }
    }

    function korsatVideo(darsRaqami, darsNomi) {
      const video = document.getElementById("darsVideo");
      video.load();
      document.getElementById("videoTitle").textContent = `Dars ${darsRaqami}: ${darsNomi}`;
      document.getElementById("videoModal").style.display = "flex";
    }

    function yopish() {
      document.getElementById("videoModal").style.display = "none";
    }
  </script>

